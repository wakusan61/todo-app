# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.HomeController.index
GET     /todo                         controllers.TodoController.list
GET     /todo/create                  controllers.TodoController.showCreateForm
POST    /todo/create                  controllers.TodoController.create
GET     /todo/update/:id              controllers.TodoController.showUpdateForm(id: Long)
POST    /todo/update                  controllers.TodoController.update()
POST    /todo/delete/:id              controllers.TodoController.remove(id :Long)

GET     /category                     controllers.CategoryController.list
GET     /category/create              controllers.CategoryController.showCreateForm
POST    /category/create              controllers.CategoryController.create
GET     /category/update/:id          controllers.CategoryController.showUpdateForm(id: Long)
POST    /category/update              controllers.CategoryController.update
POST    /category/delete/:id          controllers.CategoryController.removeWithTodo(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
